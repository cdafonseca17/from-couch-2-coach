<%= content_for :custom_body_class, 'background-grey-login' %>
  <div class="devise-form-container">
    <!-- <div class="row justify-content-center"> -->

    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-8">
        <h2>Edit my profile</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

                <div class="form-row">
                  <div class="form-group col-md-6">
                    <%= f.input :first_name, label: 'First name', error: 'First name is mandatory, please specify one',
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "" }%>
                  </div>
                  <div class="form-group col-md-6">
                    <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "" }%>
                  </div>
                </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <%= f.input :city,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "" }%>
                    </div>

                    <div class="form-group col-md-6">
                      <%= f.input :gender, label: 'Gender: ', collection: ["Male", "Female", "Rather not say"] %>
                    </div>
                  </div>

                  <!-- <div class="form-row"> -->
                    <%= f.input :password,
                                hint: "leave it blank if you don't want to change it",
                                required: false,
                                input_html: { autocomplete: "new-password" } %>
                    <%= f.input :password_confirmation,
                                required: false,
                                input_html: { autocomplete: "new-password" } %>
                    <%= f.input :current_password,
                                hint: "we need your current password to confirm your changes",
                                required: true,
                                input_html: { autocomplete: "current-password" } %>
                  <!-- </div> -->

                  <!-- <div class="form-row"> -->
                  <%= f.input :photo %>
                  <%= f.input :photo_cache, as: :hidden%>
                  <!-- </div> -->

                  <div class="form-actions">
                    <%= f.button :submit, "Save changes", class: 'save-btn btn-block' %>
                  </div>
            <% end %>
    </div>
  </div>
</div>

