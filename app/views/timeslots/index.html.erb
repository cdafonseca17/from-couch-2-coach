

<% @course = Course.find(params[:course_id]) %>

<%= @course.name  %>

<h1>Timeslots</h1>

  <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Add timeslot
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a timeslot</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <% @timeslot = Timeslot.new %>
        <%= simple_form_for [@course, @timeslot] do |f| %>
          <%= f.input :date %>
          <%= f.input :time %>
          <%= f.submit "Add a timeslot", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% @timeslots.each do |timeslot| %>
    <div style="background-color: white" class="p-3 mb-3">
      <p><strong>Date: </strong><%= timeslot.date %></p>
      <p><strong>Time: </strong><%= timeslot.time %></p>
    </div>
  <% end %>

