<div class="banner">
  <div class="container">
    <div class="row justify-content-center">
      <div style="width: 350px">
        <div>
          <h2 style="color: white" class = "pb-2 text-center">Find a training</h2>
          <%= form_tag courses_path, method: :get, class: 'mb-4' do |f| %>
            <%= select_tag 'search[category]', options_for_select(@categories, params.dig(:search, :category)), include_blank: "Any category", class: 'form-control mb-3' %>
            <%= select_tag 'search[city]', options_for_select(@cities, params.dig(:search, :city)), include_blank: "Any city", class: 'form-control mb-3' %>
            <%= text_field_tag 'search[date]', params.dig(:search, :date), class: 'form-control mb-3', placeholder: "Any date" %>
            <%= submit_tag "Search", class: "something btn btn-primary btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
  <div class="how-it-works my-3">
    <div class="row">
      <div class="col-md-12 col-xs-12">
        <h2 class="pb-5">How it works</h2>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-xs-12">
          <div class="image-container">
           <%= image_tag "HOW_1.gif", alt: "How_to_1", width: 200, height: 260 %>
         </div>
         <p class="step">1. Browse through personal trainers and their courses</p>
       </div>

       <div class="col-md-4 col-xs-12">
        <div class="image-container">
          <%= image_tag "HOW_2.gif", alt: "How_to_2", width: 200, height: 260 %>
        </div>
        <p class="step">2. Book your appointment</p>
      </div>
      <div class="col-md-4 col-xs-12">
        <div class="image-container">
          <%= image_tag "HOW_3.gif", alt: "How_to_3", width: 200, height: 260 %>
        </div>
        <p class="step">3. Get off the couch!</p>
      </div>
    </div>
  </div>
</div>
