<div class="banner">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6 col-lg-6 offset-lg-3">
        <form class="banner-form">
          <h2 class="text-left mb-3">Find a class right now</h2>
            <div class="form-group">
              <label for="class-category">Class category</label>
              <input type="text" class="form-control" id="class-category" placeholder="Spinning">
            </div>
            <div class="form-group">
              <label for="time-slot">When do you want to train?</label>
              <select id="time-slot" class="form-control">
                <option value="">Morning</option>
                <option value="">Afternoon</option>
                <option value="">Evening</option>
              </select>
            </div>
            <input type="submit" value="Search" class="btn btn-primary btn-lg w-100">
        </div>
      </div>
    </div>
  </div>
